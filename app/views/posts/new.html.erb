<h1>Ajouter un nouvel article</h1>
<div>
<%= simple_form_for(@post) do |f| %>

  <div class="form-inputs">
    <%= f.input :titre %>
  </div>

  <div class="form-inputs">
    <%= f.rich_text_area :rich_body %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Publier" %>
  </div>
<% end %>
</div>
