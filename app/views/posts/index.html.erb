<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <h2 class="mb-4 text-center">Articles r√©cents</h2>

      <!-- Search Bar -->
      <div class="mb-4">
        <div class="container mt-4 py-3", style="background-color: #DAF1DF; border-radius:10px;">
          <div class="row justify-content-center">
            <div class="col-6">
              <%= form_with url: posts_path, method: :get, class: "d-flex" do %>
                <%= text_field_tag :query,
                  params[:query],
                  class: "form-control me-1 rounded-pill",
                  placeholder: "Recherche un article"
                %>
                <%= submit_tag "Rechercher", class: "btn btn-success text-white rounded-pill" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Articles show -->
      <div id="articles">
        <% @posts.each_slice(2) do |post_pair| %>
          <div class="d-flex flex-wrap justify-content-between mb-3">
            <% post_pair.each do |post| %>
              <div class="card mb-3 article-card" style="background-color: #f0fff4; width: 48%;">
                <div class="card-body">
                  <% if post.photos.any? %>
                    <%= cl_image_tag post.photos.first.key, alt: post.titre, style: "height: 200px; width: 100%; object-fit: cover; border-radius:10px;" %>
                  <% end %>
                  <h3 class="card-title"><%= post.titre %></h3>
                  <h5 class="card-subtitle mb-2 text-muted"><%= post.categorie %></h5>
                  <p class="card-text"><%= post.contenu.truncate(200) %></p>
                  <div class="d-flex justify-content-end">
                    <%= link_to "Lire l'article", post_path(post), class: 'btn btn-success text-white rounded-pill', style: 'background-color: #0C4B36;' %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
