<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {
  data: {
    controller: "alert",
    alert_icon_value: "success",
    alert_title_value: "Are you sure?",
    alert_html_value: "Create new post.",
    confirm_button_text_value: "All good!",
    action: "submit->alert#initSweetalert",
    turbo: false
  }
}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "second" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
