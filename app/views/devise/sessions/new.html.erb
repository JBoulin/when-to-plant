<div class="container mb-3 mt-3 p-3 border bg-light rounded">
  <h2>Se connecter</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {
    data: {
      controller: "alert",
      alert_icon_value: "success",
      alert_title_value: "Are you sure?",
      alert_html_value: "Create new post.",
      confirm_button_text_value: "All good!",
      action: "submit->alert#initSweetalert",
      turbo: false
    }
  }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions d-flex justify-content-evenly">
      <%= f.button :submit, "Connexion", class: "btn btn-success mt-3 mb-3" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>

</div>
