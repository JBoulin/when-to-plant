<div class="container mb-3 mt-3 p-3 border bg-light rounded w-50 m-auto">
  <h2>Se connecter</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {
    data: {
      controller: "alert",
      alert_icon_value: "success",
      alert_title_value: "Bienvenue",
      alert_html_value: "Créer un nouveau post.",
      confirm_button_text_value: "Tout est bon!",
      action: "submit->alert#initSweetalert",
      turbo: false
    }
  }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label: "Mot de passe",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me,
                  as: :boolean,
                  label: "Rester connecté" if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions d-flex justify-content-evenly">
      <%= f.button :submit, "Se connecter", class: "btn btn-success mt-3 mb-3" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
